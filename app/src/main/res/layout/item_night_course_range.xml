<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/night_course_section_which"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center_vertical"
            android:text="第一节" />

        <TextView
            android:id="@+id/night_course_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@id/night_course_section_which"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="18"
            android:singleLine="true"
            android:text="古建筑油漆工高级工" />

        <TextView
            android:id="@+id/night_sign_in"
            android:text="无"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/night_course_item_name"
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_3"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/night_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_6"
            android:text="1月10日" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
