<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">
    <!--hot_new-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hot_img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_toEndOf="@+id/hot_img"
            android:layout_toRightOf="@+id/hot_img">

            <TextView
                android:id="@+id/hot_new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hot_new_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hot_new_title"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#B0B0B0"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/hot_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_12"
                android:src="@mipmap/a_ic_liulanshu" />

            <TextView
                android:id="@+id/hot_new_watchs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/hot_eye"
                android:text="152"
                android:textColor="#94A1C8" />

            <TextView
                android:id="@+id/hot_new_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_12"
                android:text="2017-04-24"
                android:textColor="#94A1C8" />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
