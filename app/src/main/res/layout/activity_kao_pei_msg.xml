<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_kao_pei_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.itboy.dj.examtool.modules.ftpage.apply.KaoPeiMsgActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/qwe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/apptheme1">

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="@dimen/margin_60"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:src="@mipmap/c_ic_back" />

            </RelativeLayout>

            <TextView
                android:id="@+id/base_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18" />

            <RelativeLayout
                android:id="@+id/right_rt"
                android:layout_width="@dimen/margin_60"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/base_img_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/qwee"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@color/color_white"
        android:gravity="center">
        <Button
            android:id="@+id/apply_enrol"
            android:layout_width="240dp"
            android:textColor="@color/color_white"
            android:layout_height="wrap_content"
            android:background="@drawable/next_step_shape"
            android:text="我要报名"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


    <com.yyydjk.library.DropDownMenu
        android:layout_above="@+id/qwee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/qwe"
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ddmenuTextSize="13sp"
        app:ddtextUnselectedColor="#A5A5A5"
        app:ddtextSelectedColor="@color/drop_down_selected"
        app:dddividerColor="@color/gray"
        app:ddunderlineColor="@color/gray"
        app:ddmenuSelectedIcon="@mipmap/c_ic_xiajiantou"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuBackgroundColor="@color/white"
        app:ddmenuUnselectedIcon="@mipmap/c_ic_xiajiantou"
        />

</RelativeLayout>
