<?xml version="1.0" encoding="utf-8"?>
<!--单选和判断的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/radio_or_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_12"
            android:background="@drawable/rect_do_exam"
            android:padding="4dp"
            android:text="判断"
            android:textColor="#00A77C"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/questi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/radio_or_multi"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/margin_20">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_yes"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/do_exam_status"
                android:button="@null"
                android:gravity="center"
                android:text="是"
                android:textColor="@color/workstatus_tx_color" />

            <RadioButton
                android:id="@+id/radio_no"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/do_exam_status"
                android:button="@null"
                android:gravity="center"
                android:text="否"
                android:textColor="@color/workstatus_tx_color" />




        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/radio_group"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content_A"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="5dp"

                android:textColor="@color/color_black"
                android:textSize="@dimen/margin_16" />

            <TextView
                android:id="@+id/content_B"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/margin_16" />



        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
