<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_error_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itboy.dj.examtool.modules.ftpage.exam.ErrorReviewActivity">

    <RelativeLayout
        android:id="@+id/qwe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/apptheme1">
        <TextView
            android:id="@+id/num"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/margin_60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭"
                android:textColor="@color/color_white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/base_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="错题回顾"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_error"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qwe"
        android:layout_marginTop="@dimen/margin_15">

    </android.support.v7.widget.RecyclerView>
    <!--内容部分-->


    <Button
        android:id="@+id/next_error_question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        android:background="#00A77C"
        android:text="下一错题"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15"></Button>

    <LinearLayout
        android:id="@+id/error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/next_error_question"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rec_error"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical">

    </LinearLayout>
</RelativeLayout>
