<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_night_school_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itboy.dj.examtool.modules.ftpage.NightSchool.NightSchoolDetailActivity">
    <RelativeLayout
        android:id="@+id/qwe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/apptheme1">
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/margin_60"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_12"
                android:src="@mipmap/c_ic_back" />
        </RelativeLayout>


        <TextView
            android:id="@+id/base_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>
    <!--上边内容-->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frame"
        android:layout_below="@id/qwe"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/night_bg_img"
            android:scaleType="fitXY"
            android:background="@color/table_select_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/night_study_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@mipmap/g_ic_biaoqian2"
                android:paddingLeft="@dimen/margin_12"
                android:gravity="center_vertical"
                android:text="建筑类"
                android:textColor="@color/color_white" />
            <TextView
                android:id="@+id/night_school_name"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="20sp"
                android:text="三里屯民工学院"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/night_school_teacher"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:text="主讲人：董教授"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/night_school_adress"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:text="地点：五里屯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/night_school_study_time"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:text="上课时间：2017.01.02-2017.01.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/night_my_status"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="已报名"
                android:gravity="center"
                android:background="@drawable/night_school_shape"
                android:textColor="@color/white"
                android:layout_width="60sp"
                android:layout_height="36dp" />
        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/to_report_or_signin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        android:background="@color/apptheme1"
        android:text="立即报名"
        android:textColor="@color/color_white" />



    <com.itboy.dj.examtool.widget.tabContainer.TabContainerView1
        android:id="@+id/media_bot_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/to_report_or_signin"
        android:layout_below="@id/frame"
        app:divideLineColor="@color/color_white"
        app:divideLineHeight="0"
        app:isTop="true"
        app:selectedTextColor="#454545"
        app:textColor="#454545"
        app:textSize="15sp"></com.itboy.dj.examtool.widget.tabContainer.TabContainerView1>




</RelativeLayout>
